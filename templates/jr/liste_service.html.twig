{% extends "base.html.twig" %}
{% block body %}

    <div class="card-body">
        <h1>
            <strong>Liste des Services
            </strong>
        </h1>
    </div>
    <table class="table table-striped table-bordered" id="employer">
        <thead>
            <tr class="table-primary">
                <th scope="col">Services</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.libelle }}</td>
                    <td>
                        <a class="btn btn-success" href="/jr/{{service.id}}/modif">modifier</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/jr/{{service.id}}/delete">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#employer').DataTable({
                "language": {
                    "lengthMenu": "Display _MENU_ records per page",
                    "zeroRecords": "Nothing found - sorry",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No records available",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                }
            });
        });
    </script>

{% endblock body %}
