{% extends "base.html.twig" %}
{% form_theme formemployer 'bootstrap_4_layout.html.twig' %}
{% block body %}
<section class="page-section clearfix">
         
<div class="container">
        <div >
               
            <div class="card" id="mj">
                
                <div class="card-body">

  {{form_start(formemployer)}}
  
  <div class="form-group">
          <label for="">Matricule</label>
          {{ form_widget(formemployer.matricule,{'attr':{'placeholder':"Matricule"}}) }}
  
  </div>
  <div class="form-group">
          <label for="">Nom</label>
          {{ form_widget(formemployer.nomComplet,{'attr':{'placeholder':"Nom"}}) }}
  
  </div>
  <div class="form-group">
          <label for="">Date_naissance</label>
          {{ form_widget(formemployer.DateNaiss,{'attr':{'placeholder':"Date de Naissance"}}) }}
  
  </div>
  <div class="form-group">
          <label for="">Salaire</label>
          {{ form_widget(formemployer.salaire,{'attr':{'placeholder':"Salaire"}}) }}
  
  </div>
  <div class="form-group">
          <label for="">Service</label>
          {{ form_widget(formemployer.service,{'attr':{'placeholder':"Service"}}) }}
  
  </div>
  <button type="submit" class="btn btn-primary btn-lg">
  {% if editMode %}
    Enregistrer Modification
    {% else %}
        Enregistrer
  {% endif %}
  
</button>
</div>
</div>
</div>
</div>
  {{ form_end(formemployer) }}
  
  {% endblock %}